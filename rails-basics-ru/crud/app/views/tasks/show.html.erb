<h1>Task #<%= @task.id %></h1>

<p><%= @task.name %></p>
<p><%= @task.description %></p>
<p><%= @task.status %></p>
<p><%= @task.creator %></p>
<p><%= @task.performer %></p>
<p><%= @task.completed %></p>

<%= link_to 'Edit', edit_task_path(@task) %>
<%= link_to 'Delete', task_path(@task), data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'} %>
<%= link_to 'Back', tasks_path %>